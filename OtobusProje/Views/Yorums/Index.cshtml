@model OtobusProje.Models.YorumlarViewModel

@{
    ViewData["Title"] = "Yorumlar";
}

<h1>Yorumlar</h1>

<h2>Firma Yorumları</h2>
<table class="table">
    <thead>
        <tr>
            <th>Firma</th>
            <th>Yorum</th>
            <th>Puan</th>
            <th>Tarih</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.FirmaYorumlari)
    {
        <tr>
            <td>@item.Firma.Ad</td>
            <td>@item.Yorum.Yorum1</td>
            <td>@item.Yorum.Puan</td>
            <td>@item.Yorum.Tarih</td>
        </tr>
    }
    </tbody>
</table>

