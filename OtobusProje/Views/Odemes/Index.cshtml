@model IEnumerable<OtobusProje.Models.Odeme>

@{
    ViewData["Title"] = "Ödeme";
}

<h2>Ödeme Yap</h2>

<p>
    <strong>Sefer:</strong> @ViewBag.Bilet.Sefer.Kalkis - @ViewBag.Bilet.Sefer.Varis <br />
    <strong>Tarih:</strong> @ViewBag.Bilet.Sefer.Tarih <br />
    <strong>Saat:</strong> @ViewBag.Bilet.Sefer.Saat <br />
    <strong>Tutar:</strong> @ViewBag.Bilet.Sefer.Fiyat ₺
</p>

<form asp-action="Index" method="post">
    <input type="hidden" name="biletId" value="@ViewBag.Bilet.BiletId" />
    <label>Ödeme Tipi:</label>
    <select name="odemeTipi" class="form-control">
        <option>Kredi Kartı</option>
        <option>Nakit</option>
        <option>Banka Kartı</option>
    </select>
    <br />
    <button type="submit" class="btn btn-primary">Ödeme Yap</button>
</form>
